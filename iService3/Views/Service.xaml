<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iService3.Views.Service"
             BackgroundImageSource="pattern.svg">
    <ScrollView>
        <VerticalStackLayout>
            <Frame
            BackgroundColor="#111111"
            BorderColor="#111111"
            CornerRadius="15"
            Margin="25,20,25,20">
                <SearchBar
            HorizontalOptions="Center"
            FontFamily="coolvetica"
            FontSize="20"
            Placeholder="Search articles..."
            PlaceholderColor="Gray"
            TextColor="White"
            BackgroundColor="#111111">
                </SearchBar>
            </Frame>
            <Frame
            BackgroundColor="#111111"
            BorderColor="#111111"
            CornerRadius="15"
            Margin="25,20,25,10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ImageButton
                Grid.Row="0"
                Grid.Column="0"
                Source="oil.svg"
                HorizontalOptions="Start"
                Pressed="ImageButton_Pressed" />
                    <StackLayout
                    Grid.Row="0"
                    Grid.Column="1">
                        <Label
                    Text="Engine Oil Change"
                    TextColor="White"
                    FontFamily="coolvetica"
                    FontSize="Medium" />
                        <Label
                        Text="Information about changing the oil in the engine with videos and more..."
                        TextColor="Gray" />
                    </StackLayout>
                </Grid>
            </Frame>
