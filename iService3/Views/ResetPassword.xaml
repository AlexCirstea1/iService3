<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iService3.Views.ResetPassword"
             BackgroundImageSource="pattern.svg">
    <VerticalStackLayout
        
        Margin="80,200,80,10">


        <Label Text="Reset Password" 
               FontSize="Large" Margin="0,0,0,20" TextColor="#ACACAC" 
               VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry x:Name="OldPassword" IsPassword="True"
               TextColor="#ACACAC" Placeholder="Old Password" PlaceholderColor="#ACACAC" FontSize="17" FontFamily="coolvetica" 
               Margin="0,20,0,0"/>
        <Entry x:Name="NewPassword" IsPassword="True"
               TextColor="#ACACAC" Placeholder="New Password" PlaceholderColor="#ACACAC" FontSize="17" FontFamily="coolvetica" 
               Margin="0,20,0,30"/>

        <Button Text="Save" Clicked="SaveButton_Clicked" FontSize="19" FontFamily="coolvetica" 
                TextColor="White" BorderColor="#00bfff"
                BorderWidth="1" Margin="0,0,0,20"/>

        <Button x:Name="CancelBtn" Text="Cancel" Clicked="CancelBtn_OnClicked"  FontSize="19" FontFamily="coolvetica" 
                TextColor="White" BorderColor="#00bfff"
                BorderWidth="1"/>
    </VerticalStackLayout>
</ContentPage>